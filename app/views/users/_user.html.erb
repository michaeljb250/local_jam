<li class="followposition" data-user=<%= user.id %>>
  <% if current_user.is_following?(user.id) %>
    <%= link_to "Unfollow", unfollow_user_path(user.id), data: {turbo_method: :post }, remote: true %>
  <% else %>
    <%= link_to "Follow", follow_user_path(user.id), data: {turbo_method: :post }, remote: true %>
  <% end %>
</li>
