<li data-user=<%= user.id %>>
  <% if current_user.is_following?(user.id) %>
    <%= link_to "Unfriend", unfollow_user_path(user.id), data: {turbo_method: :post }, class: "text-decoration-none", remote: true %>
  <% else %>
    <%= link_to " Add Friend", follow_user_path(user.id), data: {turbo_method: :post }, remote: true, class: "text-decoration-none" %>
  <% end %>
</li>
