  <span class =" boxbox position-relative">
<div class="box">
    <%= form_with url: users_path, method: :get, class: "d-flex align-items-center" do |form| %>
        <input type="text" class="input" name="txt" onmouseout="this.value = ''; this.blur();">
        <i class="fas fa-search"></i>
        <%end %>

</div>
</span>
  <div class="card-wrapper">
  <% @users.each do |user|  %>

    <div class="card">

      <div class="card-image">
        <%= cl_image_tag user.photo.key%>
      </div>

      <ul class="social-icons">
        <li>
           <%=   link_to user_path(user) do %>
            <i class="fa-solid fa-user"></i>
          <% end %>
        </li>
      </ul>

      <div class="details">
        <h2><%= user.first_name %>
          <br>
          <span class="job-title"><%= user.instrument %></span>
        </h2>
      </div>

    </div>
  <% end %>
  </div><!-- end box wrapper -->


